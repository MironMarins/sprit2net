@{
}

@model ApplicationCP2.Models.Produto

<h2>Detalhes do Produto</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id:</dt>
        <dd class="col-sm-10">@Model.IDPRODUTO</dd>

        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.NOME</dd>

        <dt class="col-sm-2">Descrição:</dt>
        <dd class="col-sm-10">@Model.DESCRICAO</dd>

        <dt class="col-sm-2">Quantidade em Estoque:</dt>
        <dd class="col-sm-10">@Model.QUANTIDADEESTOQUE</dd>

        <dt class="col-sm-2">Categoria:</dt>
        <dd class="col-sm-10">@Model.CATEGORIA</dd>

        <dt class="col-sm-2">Valor:</dt>
        <dd class="col-sm-10">@Model.VALOR.ToString("C")</dd>

        <dt class="col-sm-2">Data de Cadastro:</dt>
        <dd class="col-sm-10">@Model.DATACADASTRO.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Voltar para Lista</a>
